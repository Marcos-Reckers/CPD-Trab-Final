{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gpp - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            // "args": ["-c", "../DB_Steam.csv", "-1"],
            // "args": ["-s","gen=[];lan=[];tag=[];dat=[];dev=['Keen Software House'];pub=[];min=-1;max=-1;dec=;rev=[];gid=;nam=;typ=0"],
            // "args": ["-s", "gen=[];lan=[];tag=[];dat=[];dev=['Keen Software House'];pub=['Keen Software House'];min=-1;max=-1;dec=;rev=[];gid=;nam=;typ=0"],
            // "args": ["-f", "dev"],
            "args": ["-s", "gen=[];lan=[];tag=[];dat=[];dev=[];pub=[];min=-1;max=-1;dec=1980;rev=[];gid=;nam=;typ=0"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
                "externalConsole": false,
                "preLaunchTask": "gpp build active file windows",
            },
            "linux": {
                "preLaunchTask": "gpp build active file linux",
                "miDebuggerPath": "/usr/bin/gdb",
                "externalConsole": false,
                "miDebuggerArgs": "-q -ex quit; wait() { fg >/dev/null; }; /bin/gdb -q --interpreter=mi"
            }
        }
    ]
}